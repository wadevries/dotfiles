set expandtab
set shiftwidth=4
set tabstop=4

syntax enable

" Show line numbers by default
set number
" Toggle line numbers
:nmap <C-N><C-N> :set invnumber<CR>

set encoding=utf8


" Always show the status line
set laststatus=2

" Format the status line
set statusline=\%F%m%r%h\ %w\ \ CWD:\ %r%{getcwd()}%h\ \ \ Line:\ %l
